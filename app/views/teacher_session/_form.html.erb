Username: <input type="text" id="user" value="Username">
<p onclick = "check()">Submit</p>

<script>
	function check() {
	
		var user = document.getElementById("user").value;
		
		$.ajax({
		
			url: '/send_login_token',
			type: 'POST',
			dataType: 'text',
			data: {email: user, type: "2"}
			
			});
		}
</script>	

