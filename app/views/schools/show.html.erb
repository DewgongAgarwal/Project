<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @school.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @school.email %>
</p>

<p>
  	<strong>Public Key:</strong>
  	<%= @school.keys %>
</p>

<h3>My Teachers</h3>
<table>
<% @teachers.each do |t| %>
<tr><td><%= t.firstname %></td> <td><%= t.lastname =%></td><td ><%= button_to 'View Posts', show_teacher_posts_url(id: @school, teacher_id: t.id), method: :post %></td></tr>

<% end %>
</table>

<h3>My Students</h3>
<table>
<% @students.each do |s| %>
<tr><td><%= s.firstname %></td> <td><%= s.lastname =%></td><td ><%= button_to 'View Posts', show_s_to_s_posts_url(id: @school, stud_id: s.id), method: :post %></td></tr>

<% end %>
</table>
<br>

<%= link_to 'Edit', edit_school_path(@school) %> |
<%= link_to 'Student Posts', school_view_student_post_path(@school) %> |
<%= link_to 'Teacher Posts', school_view_teacher_post_path(@school) %>
<p onclick = "logout()"><%= link_to 'Log Out', schoollogout_url %></p>

<script>
	function logout()
	{
		sessionStorage.clear();
	}
</script> 