<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @school.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @school.email %>
</p>

<h3>My Teachers</h3>
<table>
<% @teachers.each do |t| %>
<tr><td><%= t.firstname %></td> <td><%= t.lastname %></td><td><form method="post" action="/show_teacher_posts" class="inline">
  <input type="hidden" name="teacher_id" value="<%=t.id%>">
  <input type="hidden" name="id" value="<%=@school.id%>">
  <button type="submit" name="submit" value="Show" class="link-button">View Posts</button>
</form></td></tr>

<% end %>
</table>

<h3>My Students</h3>
<table>
<% @students.each do |s| %>
<tr><td><%= s.firstname %></td> <td><%= s.lastname %></td><td><form method="post" action="/show_student_posts_school" class="inline">
  <input type="hidden" name="stud_id" value="<%=s.id%>">
  <input type="hidden" name="id" value="<%=@school.id%>">
  <button type="submit" name="submit" value="Show" class="link-button">View Posts</button>
</form></td></tr>

<% end %>
</table>
<br>


<p onclick = "logout()"><%= link_to 'Log Out', schoollogout_url %></p>

<script>
	function logout()
	{
		sessionStorage.clear();
	}
</script> 